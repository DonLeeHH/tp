@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":ViewSessionCommandParser" as ViewParser LOGIC_COLOR
participant "vc:ViewSessionCommand" as ViewCmd LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
participant "c:TuitionClass" as Class MODEL_COLOR
participant "s:ClassSession" as Session MODEL_COLOR
end box

[-> LogicManager : execute("viewsession c/Sec2-Math-A s/Week1")
activate LogicManager
LogicManager -> AddressBookParser : parseCommand(...)
activate AddressBookParser
create ViewParser
AddressBookParser -> ViewParser
activate ViewParser
ViewParser --> AddressBookParser
deactivate ViewParser

AddressBookParser -> ViewParser : parse(...)
activate ViewParser
ViewParser -> ViewParser : tokenize/validate
create ViewCmd
ViewParser -> ViewCmd
activate ViewCmd
ViewParser --> AddressBookParser : vc
deactivate ViewParser
deactivate AddressBookParser

LogicManager -> ViewCmd : execute(m)
activate ViewCmd

ViewCmd -> Model : getClassByName("Sec2-Math-A")
activate Model
Model --> ViewCmd : c
deactivate Model

ViewCmd -> Class : getSessionByName("Week1")
Class --> ViewCmd : s
ViewCmd -> Session : collect(dateTime, location, attendanceMap)
create CommandResult
ViewCmd -> CommandResult
ViewCmd --> LogicManager : r (details + attendance summary)
deactivate ViewCmd
[<-- LogicManager
deactivate LogicManager
@enduml
