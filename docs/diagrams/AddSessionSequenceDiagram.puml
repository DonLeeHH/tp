@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":AddSessionCommandParser" as SessParser LOGIC_COLOR
participant "as:AddSessionCommand" as SessCmd LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
participant "c:TuitionClass" as Class MODEL_COLOR
participant "s:ClassSession" as Session MODEL_COLOR
end box

[-> LogicManager : execute("addsession c/Sec2-Math-A s/Week1 dt/2025-03-15 14:30 lo/COM1-B103")
activate LogicManager
LogicManager -> AddressBookParser : parseCommand(...)
activate AddressBookParser
create SessParser
AddressBookParser -> SessParser
activate SessParser
SessParser --> AddressBookParser
deactivate SessParser

AddressBookParser -> SessParser : parse(...)
activate SessParser
SessParser -> SessParser : tokenize/validate
create SessCmd
SessParser -> SessCmd
activate SessCmd
SessParser --> AddressBookParser : as
deactivate SessParser
deactivate AddressBookParser

LogicManager -> SessCmd : execute(m)
activate SessCmd

SessCmd -> Model : getClassByName("Sec2-Math-A")
activate Model
Model --> SessCmd : c
deactivate Model

SessCmd -> Class : getSessionByName("Week1")
Class --> SessCmd : null (unique)
create Session
SessCmd -> Session : new(sessionName, dateTime, location)
SessCmd -> Class : addSession(s)

SessCmd -> Model : updateClass(c) & save
activate Model
Model --> SessCmd
deactivate Model

create CommandResult
SessCmd -> CommandResult
SessCmd --> LogicManager : r
deactivate SessCmd
[<-- LogicManager
deactivate LogicManager

note right of SessCmd
  Errors:
  - Class not found
  - Duplicate session name in class
  - Invalid datetime format
end note
@enduml
