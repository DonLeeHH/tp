@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":LinkCommandParser" as LinkParser LOGIC_COLOR
participant "lc:LinkCommand" as LinkCmd LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("link parent/Mary Doe child/Alice Doe")
activate LogicManager
LogicManager -> AddressBookParser : parseCommand(...)
activate AddressBookParser
create LinkParser
AddressBookParser -> LinkParser
activate LinkParser
LinkParser --> AddressBookParser
deactivate LinkParser

AddressBookParser -> LinkParser : parse(...)
activate LinkParser
LinkParser -> LinkParser : tokenize/validate
create LinkCmd
LinkParser -> LinkCmd
activate LinkCmd
LinkParser --> AddressBookParser : lc
deactivate LinkParser
deactivate AddressBookParser

LogicManager -> LinkCmd : execute(m)
activate LinkCmd

LinkCmd -> Model : findParentByName("Mary Doe")
activate Model
Model --> LinkCmd : parent
deactivate Model
LinkCmd -> LinkCmd : assert role == PARENT

LinkCmd -> Model : findStudentByName("Alice Doe")
activate Model
Model --> LinkCmd : child
deactivate Model
LinkCmd -> LinkCmd : assert role == STUDENT

LinkCmd -> LinkCmd : check already linked?
LinkCmd -> Model : linkParentChild(parent, child) & save
activate Model
Model --> LinkCmd
deactivate Model

create CommandResult
LinkCmd -> CommandResult
LinkCmd --> LogicManager : r
deactivate LinkCmd
[<-- LogicManager
deactivate LogicManager

note right of LinkCmd
  Errors:
  - Parent/Child not found or ambiguous
  - Role mismatch
  - Already linked (idempotent no-op or info message)
end note
@enduml
